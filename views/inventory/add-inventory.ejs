<% if (title) { %>
<h1 class="body-heading"><%= title %></h1>
<% } else { res.redirect('/'); } %> 

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
    <% }) %>
    </ul>
<% } %>


<form method="post" action="/inv/add-inventory" class="form">
  <div class="form-group">
    <label for="inv_make">Vehicle Make</label>
    <input
      type="text"
      name="inv_make"
      id="inv_make"
      value="<%= locals.inv_make || '' %>"
      required
    >
  </div>
  <div class="form-group">
    <label for="inv_model">Vehicle Model</label>
    <input
      type="text"
      name="inv_model"
      id="inv_model"
      value="<%= locals.inv_model || '' %>"
      required
    >
  </div>
  <div class="form-group">
    <label for="inv_year">Vehicle Year</label>
    <input
      type="number"
      name="inv_year"
      id="inv_year"
      value="<%= locals.inv_year || '' %>"
      required
    >
  </div>
  <div class="form-group">
    <label for="inv_description">Vehicle Description</label>
    <input
      type="text"
      name="inv_description"
      id="inv_description"
      value="<%= locals.inv_description || '' %>"
      required
    >
  </div>
  <div class="form-group">
    <label for="inv_image">Vehicle Image Path</label>
    <input
      type="text"
      name="inv_image"
      id="inv_image"
      value="<%= locals.inv_image || '' %>"
      <%# '/images/vehicles/no-image.png' %> 
      required
    >
  </div>
  <div class="form-group">
    <label for="inv_thumbnail">Vehicle Thumbnail Path</label>
    <input
      type="text"
      name="inv_thumbnail"
      id="inv_thumbnail"
      value="<%= locals.inv_thumbnail || '' %>"
      <%# '/images/vehicles/no-image-tn.png' %>
      required
    >
  </div>
  <div class="form-group">
    <label for="inv_price">Vehicle Price</label>
    <input
      type="number"
      name="inv_price"
      id="inv_price"
      value="<%= locals.inv_price || '' %>"
      step="0.01"
      required
    >
  </div>
  <div class="form-group">
    <label for="inv_miles">Vehicle Miles</label>
    <input
      type="number"
      name="inv_miles"
      id="inv_miles"
      value="<%= locals.inv_miles || '' %>"
      required
    >
  </div>
  <div class="form-group">
    <label for="inv_color">Vehicle Color</label>
    <input
      type="text"
      name="inv_color"
      id="inv_color"
      value="<%= locals.inv_color || '' %>"
      required
    >
  </div>
  <%- classificationList %>
  <button type="submit">Add Inventory</button>
</form>


